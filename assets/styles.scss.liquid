    #Panel Items
  ==============================================================================*/
  &__body {
    padding: 30px;
    > :first-of-type.panel__block {
      margin-top: 0;
    }
    > :last-of-type.panel__block {
      margin-bottom: 0;
    }
    > :only-of-type.panel__block {
      margin: 0 0 0 0;
    }
    > :first-child {
      margin-top: 0;
    }
    > :last-child {
      margin-bottom: 0;
    }
    > :only-child {
      margin: 0 0 0 0;
    }
    &+.panel__body {
      padding-top: 0;
    }
  }
  &__block, &__copy {
    &:empty {
      display: none;
    }
    margin: 1.5rem 0;
    > :first-child {
      margin-top: 0;
    }
    > :last-child {
      margin-bottom: 0;
    }
    > :only-child {
      margin: 0 0 0 0;
    }
  }
  &__heading {
    font-weight: $font-weight-bold;
    &--light {
      opacity: .6;
    }
  }
  &__sub-heading {
    margin-top: 0;
    opacity: .6;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }
  &__title {
    color: $font-color-dark;
    font-weight: $font-weight-bold;
    display: block;
  }
  &__sub-title {
    margin-bottom: 1.5rem;
    a {
      color: $color-primary;
    }
  }
  &__copy {
    display: block;
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    &--light {
      opacity: .6;
    }
  }
  &__text {
    display: block;
    margin-top: 1rem;
    margin-bottom: 1rem;
