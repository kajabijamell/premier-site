        position: static;
        display: block !important;
        text-align: center;
        padding: 0 0 0 0;
        background: transparent !important;
        box-shadow: none;
        border-top: 0;
      }
    }
    &--light {
      .user {
        &__dropdown {
          a {
            color: $font-color-dark;
          }
        }
      }
    }
    &--dark {
      .user {
        &__dropdown {
          a {
            color: $font-color-light;
          }
        }
      }
    }
  }
}
@media (min-width:$md-min) {
  .header {
    .header-menu {
      display: block !important;
    }
  }
}

/*============================================================================
  #Heading Section
==============================================================================*/
.section--heading {
  text-align: center;
  &__title {
    position: relative;
    display: block;
    &::after {
      position: absolute;
      bottom: 0;
      left: 50%;
      width: 100px;
      height: 0;
      content: "";
      background: $color-primary;
      @include translate(-50%,0);
    }
    &--sm {
      font-size: 30px;
    }
    &--md {
      font-size: 42px;
    }
    &--lg {
      font-size: 54px;
    }
    @media (max-width: $sm-max) {
      &--sm, &--md, &--lg {
        font-size: 28px;
      }
    }
  }
  &__subtitle {
    &--sm {
      font-size: 16px;
    }
    &--md {
      font-size: 18px;
    }
    &--lg {
      font-size: 20px;
    }
    @media (max-width: $sm-max) {
      &--sm, &--md, &--lg {
        font-size: 16px;
      }
    }
  }
}

/*============================================================================
  #Hero Section
==============================================================================*/
.hero-background {
  .w-control-bar {
    display: none !important;
  }
}
.section--hero {
  position: relative;
  text-align: center;
  @media (max-width: $sm-max) {
    h1 {
      font-size: 1.9rem;
    }
  }
}

/*============================================================================
  #Image Section
==============================================================================*/
.section--img {
  text-align: center;
}

/*============================================================================
  #Instructor
==============================================================================*/
.instructor {
  &__image {
    max-width: none;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin-top: .5rem;
    margin-bottom: .5rem;
  }
  &__name {
    font-weight: $font-weight-bold;
    margin-top: 0;
    margin-bottom: 0;
  }
  &__title {
    color: $color-primary;
    margin-top: 0;
    margin-bottom: 0;
  }
}

/*============================================================================
  #Link List Section
==============================================================================*/
.section--link_list {
  text-align: center;
  /*============================================================================
    #Section Color Schemes
  ==============================================================================*/
  &.section--light {
    a {
      color: $font-color-dark;
    }
  }
  &.section--dark {
    a {
      color: $font-color-light;
    }
  }
  /*============================================================================
    #Section link styles
  ==============================================================================*/
  a {
    text-transform: uppercase;
    font-family: $font-family-heading;
    font-size:  0.875rem;
  }
}

/*============================================================================
  #Logo List Section
==============================================================================*/
.section--logo_list {
  text-align: center;
}

/*============================================================================
  #Opt In Section
==============================================================================*/
.section--opt_in {
  .optin {
    &--inline {
      .col-md-4 {
        vertical-align: bottom;
      }
      .form-control, .btn {
        margin-top: 1rem;
        margin-bottom: 1rem;
      }
    }
    &--stacked {
      margin-top: 1rem;
      margin-bottom: 1rem;
    }
    &__heading {
      margin-top: 0;
    }
    &__subheading {
      margin-bottom: 2rem;
    }
  }
}

/*============================================================================
  #Page Section
==============================================================================*/
.section--page {
  text-align: center;
  .panel__body {
    text-align: left;
    padding: 30px 60px;
  }
  .page__title {
    font-size: 1.5rem;
  }
}
/*============================================================================
  #Page Responsive Styles
==============================================================================*/
@media (max-width: $sm-max) {
  .section--page {
    text-align: center;
    .panel__body {
      padding: 30px 20px;
    }
  }
}

/*============================================================================
  #Pricing Section
==============================================================================*/
.section--pricing {
  text-align: center;
}
.pricing {
  margin-top: 2rem;
  &__popular {
    background: $color-primary;
    padding: 1rem;
    text-align: center;
    font-weight: bold;
  }
  &__title {
    font-size: 1.25rem;
    margin-bottom: 0;
    color: $color-primary;
  }
  &__price {
    font-size: 3rem;
    line-height: 1.3;
    margin: 0 0 0 0;
  }
  &__frequency {
    font-size:.75rem;
    font-weight: bold;
    margin-top: .25rem;
    opacity: .5;
  }
  &__content {
    margin: 2rem 0;
  }
  .btn-cta {
    margin-bottom: 2rem;
  }
}
/*============================================================================
  #Section Pricing Responsive Styles
==============================================================================*/
@media (max-width: $md-max) {
  .pricing {
    &__price {
      font-size: 2rem;
    }
  }
}

/*============================================================================
  #Sales Page Section
==============================================================================*/
.section--sales_page {
  h1 {
    font-size: 1.875rem;
    margin-top: 1.5rem;
  }
  /*============================================================================
    #Offer Pricing
  ==============================================================================*/
  $radio-size: 20px;
  $radio-padding: 4px;

  .offers {
    input[type="radio"],
    input[type="checkbox"] {
      display: none;
    }
    .offer {
      cursor: pointer;
      padding: 30px;
      border: 1px solid #fff;
      border-bottom: 1px solid rgba(#000,.07);
      &:first-of-type {
        border-top: 1px solid rgba(#000,.07);
      }
      &--single {
        padding: 0;
        padding-bottom: 25px;
        border: none;
        &:first-of-type {
          border-top: none;
        }
      }
      &__radio {
        position: relative;
        width: $radio-size;
        height: $radio-size;
        border: 1px solid rgba(#000,.2);
        border-radius: 50%;
        margin-right: .5rem;
        margin-top: .1rem;
      }
      &__radio-inner {
        position: absolute;
        top: $radio-padding;
        left: $radio-padding;
        width: $radio-size - ($radio-padding * 2) - 2px;
        height: $radio-size - ($radio-padding * 2) - 2px;
        background-color: transparent;
        border-radius: 50%;
        @include transition(all .2s);
        @include transform(scale(0));
      }
      &__title {
        margin-top: 0;
        margin-bottom: 0;
        font-weight: $font-weight-bold;
      }
      &__desc {
        font-size: 0.875rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
      }
      &__img {
        margin: 0 0 0 0;
      }
      &__price {
        margin-bottom: 0;
        font-size: 1.125rem;
        font-weight: $font-weight-bold;
      }
    }
    input[type="radio"]:checked + label,
    input[type="checkbox"]:checked + label {
      .offer {
        border: 1px solid rgba($color-primary,.4);
        background: rgba($color-primary,.02);
        &__radio-inner {
          background-color: $color-primary;
          @include transform(scale(1));
        }
        &__price {
          color: $color-primary;
        }
      }
    }
  }
}

/*============================================================================
  #Sales Pages Section
==============================================================================*/
.section--sales_pages {
  text-align: center;
  &__tags {
    margin-bottom: 2rem;
    a {
      display: inline-block;
      font-weight: bold;
      margin: 1rem;
      font-size: 1.125rem;
    }
  }
  @media (max-width: $md-max) {
    .col-md-6 {
      display: inline-block;
      width: 50%;
    }
  }
  @media (max-width: $sm-max) {
    .col-md-6 {
      display: block;
      width: 100%;
    }
  }
}
.section--sales_pages_library {
  &.section {
    &--flush {
      padding-top: 0;
    }
  }
}
/*============================================================================
  #Sales Pages Responsive Styles
==============================================================================*/
@media (max-width: $sm-max) {
  .section--sales_pages {
    &__tags {
      margin-bottom: 1rem;
      a {
        font-size: 1rem;
      }
    }
  }
}

/*============================================================================
  #Showcase Section
==============================================================================*/
.section--showcase {
  position: relative;
}

/*============================================================================
  #Slideshow Section
==============================================================================*/
.section--slideshow {
  text-align: center;
  img {
    width: 100%;
  }
}

/*============================================================================
  #Social Cards Section
==============================================================================*/
.section--social_cards {
  text-align: center;
  [class*="col-"]{
    vertical-align: top;
  }
  &__card {
    padding: 1rem;
    margin: 1rem 0;
  }
  &__code {
    margin: 1rem 0;
  }
}

$social-icon-font-size: 24px;
$social-icon-container-size: 40px;
$social-icon-spacing: 10px;

.social-icons {
  font-size: 0;
  display: block;
  margin-bottom: 30px;
  text-align: left;
  &__row {
    margin: 0 -$social-icon-spacing;
  }
  &__icon {
    font-family: "FontAwesome" !important;
    font-size: $social-icon-font-size;
    line-height: $social-icon-container-size;
    display: inline-block;
    margin: $social-icon-spacing;
    text-decoration: none;
  }
  &__icon:hover,
  &__icon:focus {
    text-decoration: none;
  }
}

// Social Icon Background Container Style
.social-icons--round,
.social-icons--square {
  .social-icons__icon {
    width: $social-icon-container-size;
    height: $social-icon-container-size;
    text-align: center;
  }
}
.social-icons--round {
  .social-icons__icon {
    border-radius: 50%;
  }
}

// Social Icons Alignment
.social-icons--left {
  text-align: left;
}
.social-icons--center {
  text-align: center;
}
.social-icons--right {
  text-align: right;
}

// Responsive
@media (max-width: $sm-max) {
  .social-icons--left,
  .social-icons--right {
    text-align: center;
  }
}

/*============================================================================
  #Social Links
==============================================================================*/
.social {
  margin-bottom: 2rem;
  text-align: center;
  &__link {
    margin: 0 1rem;
    font-size: 1.5rem;
    line-height: 1.5;
    color: $font-color-dark;
  }
}

/*============================================================================
  #Spacer Section
==============================================================================*/
.section--spacer {
  padding: 0;
  position: relative;
  hr {
    position: absolute;
    top: 50%;
    width: 100%;
    margin-top: 0;
    margin-bottom: 0;
  }
}

/*============================================================================
  #Testimonial Section
==============================================================================*/
.section--testimonial {
  text-align: center;
  .slick-dots {
    display: table !important;
    margin: 0;
    padding: 0;
    list-style: none;
    margin: 0 auto;
    margin-bottom: 2rem;
    li {
      line-height: 0;
      position: relative;
      display: table-cell;
      height: 10px;
      margin: 0;
      cursor: pointer;
      font-size: 0;
      &.slick-active {
        button {
          background: $color-primary;
        }
      }
      button {
        border: none;
        height: .75rem;
        width: .75rem;
        background: #fff;
        margin: .5rem;
        @include border-radius(50%);
      }
    }
  }
  .testimonial {
    padding: 0 10rem;
    padding-top: 2rem;
    &__image {
      max-width: 90px;
      max-height: 90px;
      margin-top: 2rem;
      margin-bottom: 2rem;
    }
    &__name {
      font-size: 1.125rem;
    }
    &__title {
      font-weight: $font-weight-normal;
      opacity: .6;
    }
    &__text {
      font-size: 1.5rem;
    }
  }
  @media (max-width: $sm-max) {
    .testimonial {
      padding: 0 1rem;
    }
  }
}

/*============================================================================
  #Text & Image Section
==============================================================================*/
.section--text_img {

}

/*============================================================================
  #Text Section
==============================================================================*/
.section--text {

}

/*============================================================================
  #Video Embed Section
==============================================================================*/
.section--video_embed {
  text-align: center;
  .embed-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
    margin-top: 1rem;
    margin-bottom: 1rem;
    iframe, object, embed {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }
}

/*============================================================================
  #Video Section
==============================================================================*/
.section--video {
  text-align: center;
}
