    text-align: center;
    font-size: 1.125rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  &__message {
    font-size: 0.875rem;
    margin-bottom: 1rem;
    font-weight: bold;
  }
  &__group {
    margin-bottom: 1.5rem;
    &--error {
      .auth__field {
