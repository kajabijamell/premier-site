/*============================================================================
  #Max Width Of Site
==============================================================================*/
html,
body {
  height: 100%;
}
.container {
  max-width: 1180px;
  padding-left: 30px;
  padding-right: 30px;
  &--main {
    max-width: 100%;
    padding-left: 0;
    padding-right: 0;
    position: relative;
    display: table;
    overflow: hidden;
    width: 100%;
    height: 100%;
    table-layout: fixed;
    background: $container-background;
  }
}
/*============================================================================
  #Boostrap Override To Use Inline BLock Not Float Left
==============================================================================*/
.row {
  font-size: 0;
}
[class*="col-"]{
  display: inline-block;
  float: none;
  font-size: $font-size;
  vertical-align: top;
}
@media (max-width: $lg-max) {
  [class*="col-xl"] {
    display: block;
    width: 100%;
  }
}
@media (max-width: $md-max) {
  .container {
    width: 100%;
    max-width: 100%;
  }
  [class*="col-lg"] {
    display: block;
    width: 100%;
  }
}
@media (max-width: $sm-max) {
  .container {
    width: 100%;
    max-width: 100%;
    padding-left: 15px;
    padding-right: 15px;
    &--main {
      padding-left: 0;
      padding-right: 0;
    }
  }
  [class*="col-md"] {
    display: block;
    width: 100%;
  }
}
