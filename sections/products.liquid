<div class="row heading heading--library">
  <div class="col-sm-12">
    {% if section.settings.heading != "" %}
      <h3 class="heading__title" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">{{ section.settings.heading }}</h3>
    {% endif %}
  </div>
</div>
{% if products.size > 0 %}
  {% paginate products by 6 %}
    <div class="row">
      {% for product in paginate.collection %}
        <div class="col-md-12">
          {% include "product" %}
        </div>
      {% endfor %}
    </div>
    {% if paginate.pages > 1 %}
      {% include "pagination" %}
    {% endif %}
  {% endpaginate %}
{% endif %}

{% schema %}
  {
    "name": "Products",
    "elements": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "My Courses"
      },
      {
        "type": "header",
        "content": "Product Card Appearance",
        "style": "subheading"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text",
        "default": "View Course"
      },
      {
        "type": "radio",
        "id": "btn_style",
        "label": "Button Style",
        "default": "outline",
        "options": [
          { "label": "Solid", "value": "solid" },
          { "label": "Outline", "value": "outline" }
        ]
      },
      {
        "type": "radio",
        "id": "btn_width",
        "label": "Button Width",
        "default": "block",
        "options": [
          { "label": "Auto", "value": "auto" },
          { "label": "Full Width", "value": "block" }
        ]
      },
      {
        "type": "color",
        "id": "btn_background_color",
        "label": "Button Color",
        "default": "#2e91fc"
      },
      {
        "type": "color",
        "id": "btn_text_color",
        "label": "Button Text Color",
        "default": "#fff",
        "info": "For solid buttons only"
      }
    ]
  }
{% endschema %}
