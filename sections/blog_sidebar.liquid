{% if section.settings.show_sidebar %}
  <div class="section__sidebar col-md-4">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'custom_sidebar' %}
          {% include "sidebar_custom" %}
        {% when 'sidebar_optin' %}
          {% include "sidebar_optin" %}
        {% when 'recent_posts' %}
          {% include "sidebar_recent_posts" %}
        {% when 'categories' %}
          {% include "sidebar_categories" %}
        {% when 'sidebar_img' %}
          {% include "sidebar_img" %}
        {% when 'sidebar_social' %}
          {% include "sidebar_social" %}
        {% when 'Author' %}
          {% include "instructor" %}
      {% endcase %}
    {% endfor %}
</div>
{% else %}
  
{% endif %}


