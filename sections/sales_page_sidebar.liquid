{% if section.settings.show_sidebar %}
  <div class="section__sidebar col-lg-4">
    {% include "offer_pricing" %}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'offer_pricing' %}
          {% include "offer_pricing" %}
        {% when 'instructor' %}
          {% include "instructor" %}
        {% when 'custom_sidebar' %}
          {% include "sidebar_custom" %}
        {% when 'sidebar_img' %}
          {% include "sidebar_img" %}
      {% endcase %}
    {% endfor %}
  </div>
{% else %}
  <style>
    .section__body {
      width: 100%;
    }
  </style>
{% endif %}

{% schema %}
  {
    "name": "Sales Page Sidebar",
    "blocks": [
      {
        "type": "instructor",
        "name": "Instructor",
        "elements": [
          {
            "type": "header",
            "content": "Instructor"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Instructor"
          },
          {
            "type": "checkbox",
            "id": "show_img",
            "label": "Show Headshot",
            "default": "true"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Headshot",
            "fit": "crop",
            "width": 300,
            "height": 300,
            "info": "Suggested dimensions 300px x 300px"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name",
            "default": "John Doe"
