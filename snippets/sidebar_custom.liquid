{% include "panel_style", bgColor: "#fff" %}

<!-- Block Variables -->
{% assign b-Alignment = block.settings.alignment %}
{% assign b-Img = block.settings.image | image_picker_url: 'placeholder.png' %}
{% assign b-ImgShow = block.settings.show_img %}
{% assign b-Heading = block.settings.heading %}
{% assign b-Content = block.settings.content %}
{% assign b-ShowCTA = block.settings.show_cta %}

<!-- KJB Settings Variables -->
{% assign kjb-b-bgColor = 'background_color' | settings_id: section: section, block: block %}
{% assign kjb-b-Img = 'image' | settings_id: section: section, block: block %}
{% assign kjb-b-Heading = 'heading' | settings_id: section: section, block: block %}
{% assign kjb-b-Content = 'content' | settings_id: section: section, block: block %}

<style>
  .panel--{{ p-ID }} img {
    margin: 0 0 0 0;
    width: 100%;
    text-align: {{ b-Alignment }};
  }
  .panel--{{ p-ID }} .btn {
    margin: 0 0 0 0;
  }
</style>

<div class="panel panel--{{ p-AutoTextColor }} panel--{{ p-ID }}" kjb-settings-id="{{ kjb-b-bgColor }}">
  {% if b-ImgShow %}
    <img src="{{ b-Img }}" class="img-fluid" kjb-settings-id="{{ kjb-b-Img }}"/>
  {% endif %}
  <div class="panel__body">
    {% if b-Heading != "" %}
      <h6 class="panel__heading" kjb-settings-id="{{ kjb-b-Heading }}">{{ b-Heading }}</h6>
    {% endif %}
    <div class="panel__copy" kjb-settings-id="{{ kjb-b-Content }}">{{ b-Content }}</div>
    {% if b-ShowCTA %}
      {% include "cta_block" %}
    {% endif %}
  </div>
</div>
