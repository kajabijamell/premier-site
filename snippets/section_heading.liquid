<div class="row heading">
  <div class="col-sm-8">
    {% if section.settings.heading != "" %}
      <h2 class="heading__title" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != "" %}
      <p class="heading__subtitle" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>
</div>
