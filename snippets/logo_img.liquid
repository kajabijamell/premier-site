<!-- Block Variables -->
{% assign b-Img        = block.settings.logo_list_img | image_picker_url: 'logo_list.png' %}
{% assign b-ImgAction  = block.settings.img_action %}
{% assign b-Target     = block.settings.link_target %}
{% if b-Target %}
  {% assign b-Target   = "_blank" %}
{% else %}
  {% assign b-Target   = "" %}
{% endif %}

<!-- KJB Settings Variables -->
{% assign kjb-b-Img    = 'logo_list_img' | settings_id: section: section, block: block %}

<div class="col-sm-2">
  {% if b-ImgAction == "" %}
    <img src="{{ b-Img }}" class="img-fluid" kjb-settings-id="{{ kjb-b-Img }}"/>
  {% else %}
    <a href="{{ b-ImgAction }}" target="{{ b-Target }}">
      <img src="{{ b-Img }}" class="img-fluid" kjb-settings-id="{{ kjb-b-Img }}"/>
    </a>
  {% endif %}
</div>
